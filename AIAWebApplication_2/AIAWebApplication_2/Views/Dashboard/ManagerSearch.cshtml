                            + "<th>Force Multi-car Discount:</th>"
                            + "<td>" + forceDisc + "</td>"
                            + "</tr>"
                            + "</tbody>"
                            + "</table>"
                            + "</div>"
                            + "</div>"
                            + "</div>";

						$("#myModalBody").html(modalContent);
					})
				},
				error: function (result) {
					console.log(result);
					alert("Error");
				}
			});
		});
	});
</script>