                            + "<div class='panel-body'>"
                            + "<table class='table table-striped'>"
                            + "<thead>"
                            + "<tr>"
                            + "<th>Quote ID:</th>"
                            + "<td>" + quoteId + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Date Created:</th>"
                            + "<td>" + quoteDate + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Customer Name:</th>"
                            + "<td>" + customerName + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>SSN:</th>"
                            + "<td>" + ssn + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Date of Birth:</th>"
                            + "<td>" + dob + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Address:</th>"
                            + "<td>" + address + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>State:</th>"
                            + "<td>" + state + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Phone:</th>"
                            + "<td>" + phone + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Previous Carrier:</th>"
                            + "<td>" + prevCarrier + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Made Claims in Last 5 Years:</th>"
                            + "<td>" + claimsLastFiveYear + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Any Moving Violations in Last 5 Years:</th>"
                            + "<td>" + movingViolations + "</td>"
                            + "</tr>"
                            + "<tr>"
                            + "<th>Less than 3 Years Driving:</th>"
                            + "<td>" + lessThanThree + "</td>"
                            + "</tr>"
